<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jcmano.labexer3mano4itg.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filename: "
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/etFilename2"
        android:layout_alignBottom="@+id/etFilename2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:id="@+id/etFilename2"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:id="@+id/tvDisplayData"

        android:text="Display Here"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/etFilename2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLoadSharedPreferences"
        android:text="Shared Preferences"
        android:onClick="loadSharedPreferences"

        android:layout_marginTop="11dp"
        android:layout_below="@+id/tvDisplayData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLoadInternalStorage"
        android:text="Internal Storage"
        android:onClick="loadInternalStorage"

        android:layout_below="@+id/btnLoadSharedPreferences"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLoadInternalCache"
        android:text="Load internal cache"
        android:onClick="loadInternalCache"


        android:layout_below="@+id/tvDisplayData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="102dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLoadExternalCache"
        android:text="Load External Cache"
        android:onClick="loadExternalCache"

        android:layout_below="@+id/btnLoadInternalCache"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"


        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLoadExternalStorage"
        android:text="Load external storage"
        android:onClick="loadExternalStorage"


        android:layout_below="@+id/btnLoadExternalCache"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLoadExternalPublicStorage"
        android:text="Load External Public Storage"
        android:onClick="loadExternalPublicStorage"

        android:layout_below="@+id/btnLoadExternalStorage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/backPage"
        android:text="Previous"
        android:onClick="backPage"

        android:layout_below="@+id/btnLoadExternalPublicStorage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

</RelativeLayout>
